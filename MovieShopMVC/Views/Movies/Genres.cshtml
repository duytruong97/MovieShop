@model List<ApplicationCore.Models.MovieCardResponseModel>

@{
    ViewData["Title"] = "Movies in genre";
}

<div class = "rounded">
    <div class = "container-fluid"> 
        <h2> Movies of Genres @Model.First().Id </h2> 
        <div class = "row">
            @foreach (var movie in Model)
            {
                <div class = "col-6 col-xl-2 col-sm-4 col-lg-3">
                    <partial name = "_MovieCard" model = "movie"/>


                </div>
            }
        </div>
    </div>
</div>